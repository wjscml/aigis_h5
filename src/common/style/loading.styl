.ajax-loading{
    display: none;
    .loading{
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
      padding:0 4rem;
      height: 8rem;
      line-height: 8rem;
      background: rgba(109, 81, 255, 0.7);
      border-radius: 6px;
      text-align: center;
      z-index: 9999;
      color:#fff;
      img{
        width: 3.2rem;
        vertical-align: middle;
      }
      span{
        margin-left:1.2rem;
      }
    }
    .overlay{
      position: fixed;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      z-index: 9998;
      background: rgb(255, 255, 255);
      opacity: 0.15;
    }
}