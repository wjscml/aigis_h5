@import '../../common/style/variable.styl';
@import '../../common/style/mixin.styl';
.market-top
    display flex
    align-items: center
    justify-content: space-between
    padding 0 1.5rem
    height 5.4rem
    background-color #fff
    border-1px($color-line)
    .nav-wrap  
        display flex
        align-items: center 
        .nav-btn
            position relative
            margin-right: 2.1rem
            height 5.4rem
            line-height: 5.4rem
            font-size: 1.5rem
            font-weight: 600
            &.nav-btn-s
                font-size: 1.9rem
                &:after
                    content ''
                    position absolute
                    bottom 0
                    left 0
                    width: 100%
                    height 4px
                    background-color $color-blue
    .edit-btn
        color $color-light-text
    .search-btn
        font-size: 2.4rem
        color $color-blue
.market-main
    .am-tabs-default-bar
        
        .am-tabs-default-bar-tab
            padding 0
            line-height: 4.4rem
            height 4.4rem
            font-size: 1.2rem
        .am-tabs-default-bar-tab-active
            font-size: 1.5rem
            font-weight: 600
