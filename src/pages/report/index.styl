@import '../../common/style/variable.styl';
@import '../../common/style/mixin.styl';
.report-top
    display flex
    align-items: center
    justify-content: space-between
    padding 0 1.5rem
    height 5.4rem
    background-color #fff
    border-1px($color-line)
    .nav-wrap  
        display flex
        align-items: center 
        .nav-btn
            position relative
            margin-right: 2.1rem
            height 5.4rem
            line-height: 5.4rem
            font-size: 1.5rem
            font-weight: 600
            &.nav-btn-s
                font-size: 1.9rem
                &:after
                    content ''
                    position absolute
                    bottom 0
                    left 0
                    width: 100%
                    height 4px
                    background-color $color-blue
    .select-btn
        font-size 0
        color $color-blue
        .icon-filter
            font-size: 2.4rem
.report-main
    position relative
    .report-list
        position absolute
        left 0
        top 4.4rem
        width: 100%
        height calc(100vh - 14.8rem)
        background-color #fff
        .content
            padding 1rem 1.5rem
            .report-item        
                padding 1rem 0
                border-1px($color-line)
                .title
                    margin-bottom 1rem
                    height 3.6rem
                    line-height: 1.8rem
                    font-size: 1.5rem
                    color $color-sub-title
                .info
                    display flex
                    justify-content: space-between
                    font-size: 1rem
                    color $color-light-text
    .news-list
        position absolute
        left 0
        top 0
        width: 100%
        height calc(100vh - 10.4rem)
        background-color #fff
        .content
            padding 1rem 1.5rem
            .news-item
                display flex
                padding 1rem 0
                border-1px($color-line)
                .image
                    margin-right: 1.2rem
                    img 
                        border-radius: 8px
                        width: 10rem
                        height 7rem
                .right
                    flex 1
                    display flex
                    flex-direction: column
                    justify-content: space-between
                    .title
                        line-height: 1.8rem
                        font-size 1.5rem
                        color $color-sub-title
                    .info
                        display flex
                        justify-content: space-between
                        line-height: 1.6rem
                        font-size: 1rem
                        color $color-light-text

                    
