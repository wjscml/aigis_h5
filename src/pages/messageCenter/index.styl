@import '../../common/style/variable.styl';
@import '../../common/style/mixin.styl';
.message-wrap
    height 100%
    background-color #fff
    .top
        display flex
        align-items center
        height 5.4rem
        padding 0 1.5rem
        border-1px($color-line)
        line-height: 0
        .icon-back
            margin-right 2rem
            color $color-title
            font-size: 2.2rem
        .title
            font-size: 1.9rem
            font-weight: 600
            color $color-title
    .setting-list-wrap
        padding 0 1.5rem
        .list-item
            margin-top 1.5rem
            display flex
            align-items center
            height 5.2rem
            line-height: 0
            border-1px($color-line)
            img
                width: 2.2rem
                height 2.2rem
            .text
                flex 1
                margin-left: 1.6rem
                font-size: 1.6rem
                font-weight: 600
                color $color-sub-title
            .icon-right
                font-size: 2rem
                color $color-light-text
