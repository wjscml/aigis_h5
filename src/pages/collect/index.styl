@import '../../common/style/variable.styl';
@import '../../common/style/mixin.styl';
.collect-wrap
    height: 100%
    background-color #fff
    .top
        display flex
        align-items center
        height 5.4rem
        padding 0 1.5rem
        border-1px($color-line)
        line-height: 0
        .icon-back
            margin-right 2rem
            color $color-title
            font-size: 2.2rem
        .title
            font-size: 1.9rem
            font-weight: 600
            color $color-title
    .am-tabs-default-bar
        .am-tabs-default-bar-tab
            padding 0
            line-height: 4.4rem
            height 4.4rem
        .am-tabs-default-bar-tab-active
            font-size: 1.5rem
            font-weight: 600
    .collect-content
        position absolute
        top 0
        bottom 0
        width: 100%
        .content
            padding 1rem 1.5rem
            .news-item
                display flex
                padding 1rem 0
                border-1px($color-line)
                .image
                    margin-right: 1.2rem
                    img 
                        border-radius: 8px
                        width: 10rem
                        height 7rem
                .right
                    flex 1
                    display flex
                    flex-direction: column
                    justify-content: space-between
                    .title
                        line-height: 1.8rem
                        font-size 1.5rem
                        color $color-sub-title
                    .info
                        display flex
                        justify-content: space-between
                        line-height: 1.6rem
                        font-size: 1rem
                        color $color-light-text
            .report-item        
                padding 1rem 0
                border-1px($color-line)
                .title
                    margin-bottom 1rem
                    height 3.6rem
                    line-height: 1.8rem
                    font-size: 1.5rem
                    color $color-sub-title
                .info
                    display flex
                    justify-content: space-between
                    font-size: 1rem
                    color $color-light-text
    